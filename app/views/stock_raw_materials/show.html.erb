<%- model_class = StockRawMaterial -%>
<div class="page-header d-flex justify-content-lg-between align-items-center">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:raw_material) %>:</strong></dt>
  <dd><%= @stock_raw_material.raw_material.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @stock_raw_material.weight.round(3) %> kg</dd>
  <dt><strong><%= model_class.human_attribute_name(:weight_out) %>:</strong></dt>
  <dd><%= @stock_raw_material.weight_out.round(3) %> kg</dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= number_to_currency @stock_raw_material.price %> kg</dd>
</dl>
<hr>
<%= link_to t('.back', :default => t("helpers.links.back")),
              stock_raw_materials_path, :class => 'btn btn-secondary'  %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_raw_materials_path(@stock_raw_material),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
