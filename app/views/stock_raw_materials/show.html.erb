<%- model_class = StockRawMaterial -%>
<div class="page-header d-flex flex-row justify-content-start align-items-center w-100">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  <div class="d-flex flex-row justify-content-start align-items-center ml-auto">
    <%= link_to t('.back', :default => t("helpers.links.back")),
              stock_raw_materials_path, :class => 'btn btn-secondary'  %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  stock_raw_material_path(@stock_raw_material),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger ml-2' %>
  </div>
</div>
<div class="row mt-4 mb-4">
  <div class="col-6">
    <p>
      <strong><%= model_class.human_attribute_name(:raw_material) %>:</strong>
      <%= @stock_raw_material.raw_material.name %>
      <hr/>
      <strong><%= model_class.human_attribute_name(:weight) %>:</strong>
      <%= @stock_raw_material.weight.round(3) %> kg
      <hr/>
      <strong><%= model_class.human_attribute_name(:weight_out) %>:</strong>
      <%= @stock_raw_material.weight_out.round(3) %> kg
      <hr/>
      <strong><%= model_class.human_attribute_name(:price) %>:</strong>
      <%= number_to_currency @stock_raw_material.price %>
      <hr/>
    </p>
  </div>
</div>

