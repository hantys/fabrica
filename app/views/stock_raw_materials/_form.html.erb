<%= simple_form_for(@stock_raw_material) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-6">
    <%= f.association :raw_material, input_html: { class: 'simple-select2' } if f.object.new_record?%>
    <%= f.input :weight if f.object.new_record? %>
    <%= f.input :price if f.object.new_record? %>
    </div>
  </div>

  <hr>
  <%= f.button :submit, class: 'btn btn-success' %>
  <%= link_to 'Cancelar', stock_raw_materials_path, class: 'btn btn-danger' %>

<% end %>
