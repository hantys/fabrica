<%- model_class = Product -%>
<div class="page-header d-flex justify-content-lg-between align-items-center">
  <h1>Previsão de produção do dia</h1>
</div>

Exibindo <%= @products.count %> item

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Código</th>
      <th scope="col">Nome</th>
      <th scope="col">Qnt</th>
      <th scope="col"> Para produzir</th>
      <th scope="col"> Para produzir</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <%= @product %>
      <tr>
        <th scope="row"><%= product[:cod] %></th>
        <td><%= product[:name] %></td>
        <td><%= product[:qnt_produto] %></td>
        <td><%= product[:qnt_pedidos] %></td>
        <td><%= product[:total_produto] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
