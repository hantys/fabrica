<p id="notice"><%= notice %></p>

<h1>Budget Items</h1>

<table>
  <thead>
    <tr>
      <th>Composition</th>
      <th>Cod</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_items.each do |budget_item| %>
      <tr>
        <td><%= budget_item.composition %></td>
        <td><%= budget_item.cod %></td>
        <td><%= budget_item.name %></td>
        <td><%= budget_item.description %></td>
        <td><%= budget_item.price %></td>
        <td><%= link_to 'Show', budget_item %></td>
        <td><%= link_to 'Edit', edit_budget_item_path(budget_item) %></td>
        <td><%= link_to 'Destroy', budget_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

