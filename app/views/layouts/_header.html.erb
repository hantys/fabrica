        <div class="dropdown-menu hasDropboxAnimation">
          <%= link_to 'Novo Orçamento', new_budget_path, class: "dropdown-item #{active_class(new_budget_path)}" %>
          <%= link_to 'Orçamentos', budgets_path, class: "dropdown-item #{active_class(budgets_path)}" %>
