<%= simple_form_for(@provider) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-6">
      <%= f.input :company_name %>
      <%= f.input :fantasy_name %>
      <%= f.input :cpf %>
      <%= f.input :cnpj %>
      <%= f.input :street %>
      <%= f.input :number %>
      <%= f.input :neighborhood %>
      <%= f.input :cep %>
      <%= f.input :ie %>
    </div>
    <div class="col-lg-6">
      <%= f.input :bank %>
      <%= f.input :ag %>
      <%= f.input :cc %>
      <%= f.input :variation %>
      <%= f.association :state %>
      <%= f.association :city %>
      <%= f.input :phone1 %>
      <%= f.input :phone2 %>
    </div>
  </div>

  <hr>
  <%= f.button :submit, class: 'btn btn-success' %>
  <%= link_to 'Cancelar', providers_path, class: 'btn btn-danger' %>
<% end %>