<%- model_class = Composition -%>
<div class="page-header d-flex justify-content-lg-between align-items-center">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @composition.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @composition.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kind) %>:</strong></dt>
  <dd><%= @composition.kind_i18n %></dd>
</dl>
<legend><%= @composition.kind_i18n %></legend>
<ul>
  <% if @composition.kind == 'raw_material' %>
    <% @composition.raw_materials.each do |raw_material| %>
      <li><%= raw_material.name %></li>
    <% end %>
  <% else %>
    <% @composition.sub_compositions.each do |sub_composition| %>
      <li><%= sub_composition.name %></li>
    <% end %>
  <% end %>
</ul>

<hr>
<%= link_to t('.back', :default => t("helpers.links.back")),
              compositions_path, :class => 'btn btn-secondary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_composition_path(@composition), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              composition_path(@composition),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
