<%- model_class = Client -%>
<div class="page-header d-flex flex-row justify-content-start align-items-center w-100">
  <h1><strong><%=t '.title', :default => model_class.model_name.human.titleize %></strong></h1>
  <% unless @modal %>
    <div class="d-flex flex-row justify-content-start align-items-center ml-auto">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    clients_path, :class => 'btn btn-secondary ml-2' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_client_path(@client), :class => 'btn btn-primary ml-2' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    client_path(@client),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger ml-2' %>
    </div>
  <% end %>
</div>
<div class="row mt-4 mb-4">
  <div class="col-6">
    <p>
      <strong>
        <%= model_class.human_attribute_name(:cnpj) %>:
      </strong>
      <%= @client.cnpj %>
      <hr>
      <strong>
        <%= model_class.human_attribute_name(:company_name) %>:
      </strong>
      <%= @client.company_name %>
      <hr>
      <strong>
        <%= model_class.human_attribute_name(:fantasy_name) %>:
      </strong>
      <%= @client.fantasy_name %>
      <hr>
      <strong>
        <%= model_class.human_attribute_name(:cpf) %>:
      </strong>
      <%= @client.cpf %>
      <hr/>
      <strong>
        <%= model_class.human_attribute_name(:ie) %>:
      </strong>
      <%= @client.ie %>
      <hr/>
      <strong>
      <%= model_class.human_attribute_name(:phone1) %>:
      </strong>
      <%= @client.phone1 %>
      <hr/>
      <strong>
      <%= model_class.human_attribute_name(:phone2) %>:
      </strong>
      <%= @client.phone2 %>
      <hr/>
      <strong>
        <%= model_class.human_attribute_name(:employee) %>:
      </strong>
      <%= @client.try(:employee).try(:name) %>
      <hr/>
    </p>
  </div>
  <div class="col-6">
    <p>
      <strong>
        <%= model_class.human_attribute_name(:cep) %>:
      </strong>
      <%= @client.cep %>
      <hr>
      <strong>
        <%= model_class.human_attribute_name(:street) %>:
      </strong>
      <%= @client.street %>
      <hr>
      <strong>
        <%= model_class.human_attribute_name(:number) %>:
      </strong>
      <%= @client.number %>
      <hr>
      <strong>
        <%= model_class.human_attribute_name(:neighborhood) %>:
      </strong>
      <%= @client.neighborhood %>
      <hr>
      <strong>
        <%= model_class.human_attribute_name(:city) %>:
      </strong>
      <%= @client.try(:city).try(:name) %> - <%= @client.try(:state).try(:acronym) %>
      <hr>
    </p>
  </div>
</div>
<% unless @modal %>
  <%= render 'custom_product_table', client_id: @client.id %>
<% end %>
