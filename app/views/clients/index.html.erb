<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Fantasy name</th>
      <th>Cpf</th>
      <th>Street</th>
      <th>Number</th>
      <th>Neighborhood</th>
      <th>Cep</th>
      <th>Cnpj</th>
      <th>Ie</th>
      <th>State</th>
      <th>City</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.company_name %></td>
        <td><%= client.fantasy_name %></td>
        <td><%= client.cpf %></td>
        <td><%= client.street %></td>
        <td><%= client.number %></td>
        <td><%= client.neighborhood %></td>
        <td><%= client.cep %></td>
        <td><%= client.cnpj %></td>
        <td><%= client.ie %></td>
        <td><%= client.state %></td>
        <td><%= client.city %></td>
        <td><%= client.phone1 %></td>
        <td><%= client.phone2 %></td>
        <td><%= client.employee %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

