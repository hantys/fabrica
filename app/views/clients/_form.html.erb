<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-6">
      <%= f.input :company_name %>
      <%= f.input :fantasy_name %>
      <%= f.input :cpf %>
      <%= f.input :street %>
      <%= f.input :number %>
      <%= f.input :neighborhood %>
    </div>
    <div class="col-lg-6">
      <%= f.input :cep %>
      <%= f.input :cnpj %>
      <%= f.input :ie %>
      <%= f.association :state, collection: State.order(:name), prompt: "Escolha um estado" %>
      <%= f.association :city, collection: City.order(:name), prompt: "Escolha uma cidade" %>
      <%= f.input :phone1 %>
      <%= f.input :phone2 %>
      <%= f.association :employee, collection: Employee.order(:name), :selected => (current_user.employee.id if f.object.new_record?), prompt: "Escolha um funcionÃ¡rio" %>
    </div>
  </div>

  <hr>
  <%= f.button :submit, class: 'btn btn-success' %>
  <%= link_to 'Cancelar', clients_path, class: 'btn btn-danger' %>
<% end %>