<%- model_class = User -%>
<div class="page-header d-flex justify-content-lg-between align-items-center">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= Employee.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.try(:employee).try(:name) %></dd>
  <dt><strong><%= Employee.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= @user.try(:employee).try(:cpf) %></dd>
  <dt><strong><%= Employee.human_attribute_name(:phone1) %>:</strong></dt>
  <dd><%= @user.try(:employee).try(:phone1) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:roles_mask) %>:</strong></dt>
  <dd><%= roles_humanize(@user.roles) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deleted) %>:</strong></dt>
  <dd><%= @user.deleted_at.present? ? "NÃ£o / #{@user.deleted_at}" : "Sim" %></dd>
</dl>
<hr>
<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-secondary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              users_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>