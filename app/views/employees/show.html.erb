<%- model_class = Employee -%>
<div class="page-header d-flex justify-content-lg-between align-items-center">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @employee.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= @employee.cpf %></dd>

  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @employee.email %></dd>

  <dt><strong><%= model_class.human_attribute_name(:office) %>:</strong></dt>
  <dd><%= @employee.office %></dd>

  <dt><strong><%= model_class.human_attribute_name(:bank) %>:</strong></dt>
  <dd><%= @employee.bank %></dd>

  <dt><strong><%= model_class.human_attribute_name(:ag) %>:</strong></dt>
  <dd><%= @employee.ag %></dd>

  <dt><strong><%= model_class.human_attribute_name(:cc) %>:</strong></dt>
  <dd><%= @employee.cc %></dd>

  <dt><strong><%= model_class.human_attribute_name(:variation) %>:</strong></dt>
  <dd><%= @employee.variation %></dd>

  <dt><strong><%= model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @employee.street %></dd>

  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @employee.number %></dd>

  <dt><strong><%= model_class.human_attribute_name(:neighborhood) %>:</strong></dt>
  <dd><%= @employee.neighborhood %></dd>

  <dt><strong><%= model_class.human_attribute_name(:cep) %>:</strong></dt>
  <dd><%= @employee.cep %></dd>

  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @employee.state %></dd>

  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @employee.city %></dd>

  <dt><strong><%= model_class.human_attribute_name(:phone1) %>:</strong></dt>
  <dd><%= @employee.phone1 %></dd>

  <dt><strong><%= model_class.human_attribute_name(:phone2) %>:</strong></dt>
  <dd><%= @employee.phone2 %></dd>

</dl>

<hr>
<%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn btn-secondary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employees_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
