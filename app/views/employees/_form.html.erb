
<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cpf %>
    <%= f.input :email %>
    <%= f.input :office %>
    <%= f.input :bank %>
    <%= f.input :ag %>
    <%= f.input :cc %>
    <%= f.input :variation %>
    <%= f.input :street %>
    <%= f.input :number %>
    <%= f.input :string %>
    <%= f.input :neighborhood %>
    <%= f.input :cep %>
    <%= f.association :state %>
    <%= f.association :city %>
    <%= f.input :phone1 %>
    <%= f.input :phone2 %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
