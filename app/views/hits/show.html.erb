<%- model_class = Hit -%>
<div class="page-header d-flex justify-content-lg-between align-items-center">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @hit.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:composition) %>:</strong></dt>
  <dd><%= @hit.composition.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:residue) %>:</strong></dt>
  <dd><%= @hit.residue.round(3) %> kg</dd>
</dl>
<legend>itens:</legend>
  <% @hit.hit_items.each do |hit_item| %>
    <%= hit_item.raw_material.name %>, <%= hit_item.weight.round(3) %>kg
    <br>
  <% end %>
<hr>
<%= link_to t('.back', :default => t("helpers.links.back")),
              hits_path, :class => 'btn btn-secondary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hit_path(@hit), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hits_path(@hit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
