<% raw_materials.order(:name).each do |raw_material| %>
  <div class="form-group string optional hit_hit_items_attributes_<%= raw_material.id %>_name">
    <%= text_field_tag "hit[hit_items_attributes][#{raw_material.id}][name]", raw_material.name, disabled: true, class: 'form-control string optional', id: "hit_hit_items_attributes_#{raw_material.id}_name" %>
  </div>
  <div class="form-group string optional hit_hit_items_attributes_<%= raw_material.id %>_weight">
    <%= number_field_tag "hit[hit_items_attributes][#{raw_material.id}][weight]", nil, max: raw_material.amount, min: 0, step: '0.01', disabled: (raw_material.amount <= 0), class: 'form-control string optional', id: "hit_hit_items_attributes_#{raw_material.id}_weight" %> kg
  </div>
  <%= hidden_field_tag "hit[hit_items_attributes][#{raw_material.id}][raw_material_id]", raw_material.id %>
<% end %>
