
<%= simple_form_for(@hit) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :composition, collection: Composition.where(kind: 0), input_html: { onchange: 'setHitItems(this)'} %>
  </div>

  <div id="raw_materials_items"></div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
