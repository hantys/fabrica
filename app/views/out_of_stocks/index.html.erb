<p id="notice"><%= notice %></p>

<h1>Out Of Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Budget</th>
      <th>User</th>
      <th>Product</th>
      <th>Qnt</th>
      <th>Cost</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @out_of_stocks.each do |out_of_stock| %>
      <tr>
        <td><%= out_of_stock.budget %></td>
        <td><%= out_of_stock.user %></td>
        <td><%= out_of_stock.product %></td>
        <td><%= out_of_stock.qnt %></td>
        <td><%= out_of_stock.cost %></td>
        <td><%= out_of_stock.value %></td>
        <td><%= link_to 'Show', out_of_stock %></td>
        <td><%= link_to 'Edit', edit_out_of_stock_path(out_of_stock) %></td>
        <td><%= link_to 'Destroy', out_of_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

