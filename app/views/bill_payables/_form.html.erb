<%= simple_nested_form_for(@bill_payable) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-4">

      <div class="form-group select required bill_payable_provider_contract">
        <label class="form-control-label select required" for="bill_payable_provider_contract_id">Contrato com fornecedor <abbr title="requerido">*</abbr></label>
        <div class="d-flex align-items-center">
          <%= f.association :provider_contract, collection: ProviderContract.where(status: 0).order(:name), prompt: "Escolha um Contrato", input_html: { class: 'simple-select2 w-100' }, wrapper: false, label: false %>
          <div class="ml-2">
            <%= link_to_modal_form new_provider_contract_path, class: 'text-white' do %>
              <span class="badge badge-info ">
                <i class="material-icons" >
                    add_circle_outline
                </i>
              </span>
            <% end %>
          </div>
        </div>
      </div>
      <%= f.input :total_value, readonly: true %>
      <span id='file-name' class="badge badge-success"><%= @bill_payable.file.filename if @bill_payable.file.present? %></span>
      <div class="d-flex flex-row bd-highlight mb-3">
        <i class="material-icons p-2 bd-highlight">
        <span id='icon-file' class="badge <%= @bill_payable.file.present? ? 'badge-success' : 'badge-danger' %> ">
          <%= @bill_payable.file.present? ? 'cloud_done' : 'cloud' %>
        </span>
        </i>
        <%= f.input :file, label: false, input_html: { class: 'p-2 bd-highlight update_file_by_icon' } %>
      </div>
      <%= f.hidden_field :file_cache %>
    </div>
    <div class="col-lg-4">
      <%= f.association :category, input_html: { class: 'simple-select2' } %>
      <%= f.association :revenue, input_html: { class: 'simple-select2' } %>
      <%= f.input :obs %>

    </div>
  </div>

  <% if @bill_payable.errors[:bill_payable_installments].present? %>
    <legend class="alert alert-danger">
      <small class=""><%= @bill_payable.errors.full_messages.first %></small>
    </legend>
  <% else %>
    <legend>Parcelas</legend>
  <% end %>
  <div id="bill_payable_installments">
    <%= f.fields_for :bill_payable_installments do |bill_payable_installments_form| %>
      <div class="card card-body">
        <div class="row ">
          <div class="col-2">

            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
              <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</a>
              <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Profile</a>
              <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Messages</a>
              <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Settings</a>
            </div>
            <div class="form-group float optional provider_contract_bill_payable_installments_value form-group-valid">
              <label class="form-control-label float optional">  </label>
              <%= bill_payable_installments_form.link_to_remove "Remover orçamento", class: 'btn btn-outline-danger form-control float optional mt-2' %>
            </div>
          </div>
          <div class="col-4">
            <%= bill_payable_installments_form.association :cred_card, input_html: {class: 'simple-select2'}, prompt: "Escolha um cartão" %>
          </div>
          <div class="col-4">
            <%= bill_payable_installments_form.input :value, input_html: {class: 'value_budget'} %>
            <%= bill_payable_installments_form.input :date, input_html: {class: 'date'} %>

            <span class="badge badge-success file-name"><%= bill_payable_installments_form.object.file.filename if bill_payable_installments_form.object.file.present? %></span>
            <div class="d-flex flex-row bd-highlight mb-3">
              <i class="material-icons p-2 bd-highlight">
              <span class="icon-file badge <%= bill_payable_installments_form.object.file.present? ? 'badge-success' : 'badge-danger' %> ">
                <%= bill_payable_installments_form.object.file.present? ? 'cloud_done' : 'cloud' %>
              </span>
              </i>
              <%= bill_payable_installments_form.input :file, label: false, input_html: { class: 'p-2 bd-highlight update_file_by_icon' } %>
            </div>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </div>
  <hr>
  <p><%= f.link_to_add "Adicionar Orçamento", :bill_payable_installments, :data => { :target => "#bill_payable_installments" }, class: 'btn btn-outline-primary' %></p>
  <hr>

  <hr>
  <%= f.button :submit, class: 'btn btn-success' %>
  <%= link_to 'Cancelar', bill_payables_path, class: 'btn btn-danger' %>
<% end %>
